/* 上半部分界面 */
.number1 {
  margin-top: 0rpx;
  padding-top: 0.1rpx;
  width: 100vw;
  height: 100vw;
  background: rgb(21, 196, 59);
}
/* 上半部分界面里面的字体 */
.font1 {
  margin-top:45vw;
  display: flex;
  width: 100%;
  position: absolute;
  flex-direction: column;
  align-items: center;
  font-size: large;
}

/* 三个按钮所在的这一行 */
.click_btn{
  height:66px;
  width: 100%;
}
/* 第一个按钮 */
